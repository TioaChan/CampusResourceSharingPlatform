@model CampusResourceSharingPlatform.Web.Pages.IndexModel
<div class="card-deck">
	@if (Model.IndexPage.Expresses.Count!=0){
		@foreach (var express in Model.IndexPage.Expresses)
		{
			<div class="mb-2">
				<div class="card pill-card-item">
					@* <img src="..." class="card-img-top" alt="..."> *@
					<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
					<div class="card-body">
						<h5 class="card-title"><a class="text-decoration-none" href="#">@express.MissionName</a></h5>
						<p class="card-text"><a class="text-decoration-none text-reset" href="#"> @express.MissionNotes</a></p>
					</div>
					<div class="card-footer">
						<small class="text-muted">发布于 @express.PostTime.ToLocalTime()</small>
					</div>
				</div>
			</div>
		}
	}
</div>