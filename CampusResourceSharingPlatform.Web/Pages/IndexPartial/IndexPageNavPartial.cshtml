	#pills-tab {
		line-height: 42px;
		padding: 0;
	}

	.pills-btnContent {
		line-height: 44px;
		padding: 0;
	}

	.btn-nav {
		line-height: 40px;
	}

	.nav-pills .nav-link.active,
	.nav-pills .show > .nav-link {
