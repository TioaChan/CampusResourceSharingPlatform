<script>
	$(document).ready(function () {
		var index = $("#pills-tab .nav-item:has('.active')").parent().index();
		// console.log(index);
		ChangeNavbarBtnLink(index);
		$("#pills-tab a").click(function (e) {
			index = $(this).parent().index();
			// console.log(index);
			ChangeNavbarBtnLink(index);
		});
	});

	function ChangeNavbarBtnLink(e) {
		switch (e) {
		case 0:
			$("#navbar-btn").attr('href', '/Distribute/Take').text('Take');
			break;
		case 1:
			$("#navbar-btn").attr('href', '/Distribute/TakeOrder').text('TakeOrder');
			break;
		case 2:
			$("#navbar-btn").attr('href', '/Distribute/Buy').text('Buy');
			break;
		case 3:
			$("#navbar-btn").attr('href', '/Distribute/404').text('404');
			break;
		default:
			$("#navbar-btn").attr('href', '/Distribute/Take').text('Take');
			break;
		}
	}
</script>