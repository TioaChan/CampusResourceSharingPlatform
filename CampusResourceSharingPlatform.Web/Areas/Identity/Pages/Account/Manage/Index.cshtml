@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
	<div class="col-md-6">
		<form enctype="multipart/form-data" id="avatar-form" method="post" asp-route-id="Avatar">
			<div class="form-group">
				<label asp-for="Input.NewAvatar" class="col-form-label"></label>
				<div>
					<div class="custom-file">
						<input asp-for="Input.NewAvatar" class="form-control custom-file-input"/>
						<label class="custom-file-label" style="overflow: hidden">请选择图片</label>
					</div>
					<script>
						$(document).ready(function () {
							$(".custom-file-input").on("change",
								function () {
									console.log($(this).val());
									var fileName = $(this).val().split("\\").pop();
									$(this).next(".custom-file-label").html(fileName);
								});
						});
					</script>
					<span asp-validation-for="Input.NewAvatar" class="text-danger"></span>
				</div>
			</div>
			<button id="update-avatar-button" type="submit" class="btn btn-primary">Upload</button>
		</form>
		<hr />
		<form id="profile-form" method="post" asp-route-id="PhoneNumber">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Username"></label>
				<input asp-for="Username" class="form-control" disabled/>
			</div>
			<div class="form-group">
				<label asp-for="Input.PhoneNumber"></label>
				<input asp-for="Input.PhoneNumber" class="form-control"/>
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>
			<button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}