@page
@model CampusResourceSharingPlatform.Web.Areas.Identity.Pages.Account.Manage.StudentIdentityModel
@{
	ViewData["Title"] = "Student Identity";
	ViewData["ActivePage"] = ManageNavPages.StudentIdentity;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
	<div class="col-md-6">
		@if (Model.IsStudentIdentityConfirmed)
		{
			<form id="email-form" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="SchoolCardNo"></label>
					<div class="input-group">
						<input asp-for="SchoolCardNo" class="form-control" disabled />
						<div class="input-group-append">
							<span class="input-group-text text-success font-weight-bold">✓</span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="RealName"></label>
					<div class="input-group">
						<input asp-for="RealName" class="form-control" disabled />
						<div class="input-group-append">
							<span class="input-group-text text-success font-weight-bold">✓</span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="IdCardNo"></label>
					<div class="input-group">
						<input asp-for="IdCardNo" class="form-control" disabled />
						<div class="input-group-append">
							<span class="input-group-text text-success font-weight-bold">✓</span>
						</div>
					</div>
				</div>
				<button class="btn btn-primary" disabled>你已经认证了学生身份，不可更改</button>
			</form>
		}
		else
		{
			<div>你还没有验证学生身份，请先验证学生身份</div>
			<form id="studentidentity-form" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.NewSchoolCardNo"></label>
					<input asp-for="Input.NewSchoolCardNo" class="form-control" />
					<span asp-validation-for="Input.NewSchoolCardNo" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.NewRealName"></label>
					<input asp-for="Input.NewRealName" class="form-control" />
					<span asp-validation-for="Input.NewRealName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.NewIdCardNo"></label>
					<input asp-for="Input.NewIdCardNo" class="form-control" />
					<span asp-validation-for="Input.NewIdCardNo" class="text-danger"></span>
				</div>
				<button id="verify-studentidentity-button" type="submit" asp-page-handler="VerifyStudentIdentity" class="btn btn-primary">认证</button>
			</form>
		}
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}