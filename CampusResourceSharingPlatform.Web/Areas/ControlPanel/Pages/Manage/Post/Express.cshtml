@page
@inject UserManager<ApplicationUser> UserManager
@model CampusResourceSharingPlatform.Web.Areas.ControlPanel.Pages.Manage.Post.ExpressModel
@{
	ViewData["Title"] = "Express";
	Layout = "Post/_Layout";
	ViewData["ActivePage"] = ManageNavPages.PostIndex;
	ViewData["ActivePageOfPost"] = ManagePostNavPages.TakeExpress;
}

<div class="card mb-3">
	<div class="card-header">
		<h4><i class="fa fa-user" aria-hidden="true"></i> 有效代取快递需求 (总计&nbsp;@Model.Posts.Count())</h4>
	</div>
	<div class="card-body p-0">
		<div class="table-responsive">
			<table class="table">
				<thead>
				<tr>
					<th></th>
					<th>快递单号</th>
					<th>菜鸟驿站位置</th>
					<th>酬劳</th>
					<th>状态</th>
					<th></th>
				</tr>
				</thead>
				<tbody>
				@foreach (var u in Model.Posts)
				{
					<tr>
						<th class="vertical-align-middle"> @u.ExpressCompany </th>
						<td class="vertical-align-middle">
							<strong>@u.TrackingCode</strong><br />
							<small>取货码：@u.PickCode</small>
						</td>
						<td class="vertical-align-middle">@u.YiZhanName</td>
						<td class="vertical-align-middle">@u.MissionReward</td>
						@if (u.IsAccepted)
						{
							@if (u.IsCompleted)
							{
								<td class="vertical-align-middle">已完成</td>
							}
							else
							{
								<td class="vertical-align-middle">已被 @UserManager.FindByIdAsync(u.AcceptUserId).Result.UserName 领取</td>
							}
						}
						else
						{
							<td class="vertical-align-middle">等待领取</td>
						}
						<td class="vertical-align-middle">
							@if(u.IsAccepted && !u.IsCompleted)
							{
								@*<a class="btn btn-sm btn-primary float-left m-1">确认完成</a>*@
							}
							<a asp-area="Posts" asp-page="TakeExpress" asp-route-postId="@u.Id" class="btn btn-sm m-1 btn-primary float-left">详细信息</a>
						</td>
					</tr>
				}
				</tbody>
			</table>
		</div>
	</div>
</div>