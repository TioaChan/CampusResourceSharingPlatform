@using CampusResourceSharingPlatform.Model
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
	var currentUser = await UserManager.GetUserAsync(User);
}

<link rel="stylesheet" href="/css/Manage/nav.css">

<ul class="nav nav-pills flex-column">
	<li class="user-avatar">
		<div class="user-header"><img class="user-avatar-img" src="@currentUser.ProfilePhotoUrl" alt="Avatar of @currentUser.UserName"></div>
		<h4 class="user-email text-base text-black">
			@currentUser.NickName
		</h4>
	</li>

	<li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="index" asp-page="../Index">Overview</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.RoleIndexNavClass(ViewContext)" id="role-index" asp-page="../Role/Index">Role</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.UsersIndexNavClass(ViewContext)" id="users-index" asp-page="./Index">Users</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.PostIndexNavClass(ViewContext)" id="post-index" asp-page="../Post/Index">Post</a></li>
</ul>