@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" href="/css/Manage/nav.css">

<ul class="nav nav-pills flex-column">
	<li class="user-avatar">
		<div class="user-header"><img class="user-avatar-img" src="@UserManager.GetUserAsync(User).Result.ProfilePhotoUrl" alt="Avatar of @User.Identity.Name"></div>
		<h4 class="user-email text-base text-black">
			@UserManager.GetUserAsync(User).Result.NickName
		</h4>
	</li>

	<li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Overview</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.RoleIndexNavClass(ViewContext)" id="role" asp-page="./Role/Index">Role</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.UsersIndexNavClass(ViewContext)" id="users" asp-page="./Users/Index">Users</a></li>
	<li class="nav-item"><a class="nav-link @ManageNavPages.PostIndexNavClass(ViewContext)" id="post" asp-page="./Post/Index">Post</a></li>
</ul>
